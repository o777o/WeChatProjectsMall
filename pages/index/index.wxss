.index_swiper {
	height: 340rpx;
}

.index_swiper image {
	width: 100%;
}

.index_cate {
	display: flex;
}

.index_cate navigator {
	padding: 20rpx;
	flex: 1;
}

.index_cate navigator image {
	width: 100%;
}

.index_floor .floor_group .floor_title {
	padding-top: 10rpx;
} 

.floor_group .floor_title image {
	width: 100%;
}

.index_floor .floor_list {
	overflow: hidden;
}

.index_floor .floor_list navigator {
	width: calc(100vw / 3);
	float: left;
	padding: 5rpx;
}

.index_floor .floor_list navigator:nth-last-child(-n + 4) {
	height: calc(100vw / 3 * 386 / 232 / 2);
}

.floor_list navigator image {
	width: 100%;
	height: 100%;
}

