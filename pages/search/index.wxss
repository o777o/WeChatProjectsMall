page {
  background-color: #dedede;
  padding: 20rpx;
}

.search-row {
  height: 60rpx;
  display: flex;
}

.search-row input {
  background-color: #fff;
  flex: 1;
  height: 100%;
  padding-left: 30rpx;
}

.search-row button {
  width: 110rpx !important;
  height: 100%;
  font-size: 26rpx !important;
  padding: 0;
  margin: 0 10rpx !important;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-content {
  margin-top: 30rpx;
}

.search-content__item {
  background-color: #fff;
  font-size: 26rpx;
  align-items: center;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
