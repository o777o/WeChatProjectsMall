.cates .cates_container {
	display: flex;
}

.cates .cates_container scroll-view {
	height: calc(100vh - 90rpx);
}

.cates .cates_container .left_menu {
	flex: 2;
}

.cates_container .left_menu view {
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 30rpx;
}

.cates_container .left_menu .active {
	color: var(--themeColor);
	border-left: 5rpx solid;
}

.cates .cates_container .right_content {
	flex: 5;
}

.right_content .goods_group .goods_title {
	line-height: 80rpx;
	text-align: center;
}

.goods_group .goods_title .delimiter {
	color: #ccc;
	padding: 0 10rpx;
}

.right_content .goods_group .goods_list {
	display: flex;
	flex-wrap: wrap;
}

.goods_group .goods_list navigator {
	width: 33.33%;
	text-align: center;
}

.goods_list navigator image {
	width: 50%;
}

